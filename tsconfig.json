{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es2022", // Enables modern JavaScript features like top-level await
    "module": "es2022", // Required for top-level await
    "moduleResolution": "node", // Ensures proper resolution of modules
    "allowSyntheticDefaultImports": true, // Allows default imports from modules
    "esModuleInterop": true // Ensures compatibility with CommonJS and ESModules
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
